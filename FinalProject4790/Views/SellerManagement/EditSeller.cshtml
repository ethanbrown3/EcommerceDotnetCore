@model SellerEditViewModel

<h2>Edit Seller</h2>

<form asp-controller="SellerManagement" asp-action="EditSeller" method="post" class="form-horizontal" role="form">
    <h4>Update the seller details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Seller.SellerId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Seller.SellerId" class="form-control" readonly/>
            <span asp-validation-for="Seller.SellerId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Seller.SellerName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Seller.SellerName" class="form-control" />
            <span asp-validation-for="Seller.SellerName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Seller.SellerDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Seller.SellerDescription" class="form-control" />
            <span asp-validation-for="Seller.SellerDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Update Seller" />
        </div>
    </div>
</form>
