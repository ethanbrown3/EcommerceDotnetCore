@model ShoppingCartViewModel

<h2>Shopping Cart</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected amount</th>
            <th>Product</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lineItem in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@lineItem.CartItemQuantity</td>
                <td class="text-left">@lineItem.CartItemProduct.ProductName</td>
                <td class="text-right">&#36;@lineItem.CartItemProduct.ProductPrice.ToString("G29")</td>
                <td class="text-right">
                    &#36;@((lineItem.CartItemQuantity * lineItem.CartItemProduct.ProductPrice).ToString("G29"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                &#36;@Model.ShoppingCartTotal.ToString("G29")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check Out</a>
</div>