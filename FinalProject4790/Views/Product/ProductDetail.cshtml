@model Product

<h2>@Model.ProductName</h2>

<div class="thumbnail">
    <img alt="@Model.ProductName" src="@Model.ProductImgUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.ProductPrice.ToString("#,##0.00")</h3>
        <h3>
            <a href="#">@Model.ProductName</a>
        </h3>
        <p>@Model.ProductDescription</p>
    </div>
</div>