@model Product

<h2>@Model.ProductName</h2>

<div class="thumbnail">
    <img alt="@Model.ProductName" src="@Model.ProductImgUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.ProductPrice.ToString("#,##0.00")</h3>
        <h3>@Model.ProductName</h3>
        <h4>@Model.ProductShortDescription</h4>
        <h4><a href="#">Add To Order</a></h4>
        <p>@Model.ProductLongDescription</p>
    </div>
</div>