@model ProductEditViewModel

<h2>Create a new Product</h2>

<form asp-controller="ProductManagement" asp-action="AddProduct" method="post" class="form-horizontal" role="form">
    <h4>Create the product details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Product.ProductName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.ProductName" class="form-control" />
            <span asp-validation-for="Product.ProductName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.ProductShortDescription" class="form-control" />
            <span asp-validation-for="Product.ProductShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductLongDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.ProductLongDescription" class="form-control" />
            <span asp-validation-for="Product.ProductLongDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductPrice" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.ProductPrice" class="form-control" />
            <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Product.ProductImgUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.ProductImgUrl" class="form-control" />
            <span asp-validation-for="Product.ProductImgUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Product.IsEdible" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.IsEdible" class="form-control" />
            <span asp-validation-for="Product.IsEdible" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Product.enabled" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.enabled" class="form-control" />
            <span asp-validation-for="Product.enabled" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Product.SellerId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Product.SellerId" class="form-control" />
            <span asp-validation-for="Product.SellerId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create Product" />
        </div>
    </div>
</form>
